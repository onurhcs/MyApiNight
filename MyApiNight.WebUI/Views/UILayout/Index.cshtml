<body data-bs-spy="scroll" data-bs-target="#header" tabindex="0">

	<div id="header-wrap">

		

		@await Component.InvokeAsync("_NavbarUILayoutComponentPartial")


	</div><!--header-wrap-->


	<section id="billboard">
		<div class="container">
			<div class="row">
				<div class="col-md-12">

					<!-- Önceki Slider Butonu -->
					<button class="prev slick-arrow">
						<i class="icon icon-arrow-left"></i>
					</button>

					<!-- Ana Slider -->
					<div class="main-slider pattern-overlay">
						<!-- Slider Öğesi 1 -->
						<div class="slider-item">
							<div class="banner-content">
								<h2 class="banner-title">Modern Web Geliştirme</h2>
								<p>
									HTML5, CSS3 ve JavaScript ile modern ve duyarlı web arayüzleri oluşturun.
									Web teknolojilerinin gücünü keşfedin ve projelerinizi bir üst seviyeye taşıyın.
								</p>
								<div class="btn-wrap">
									<a href="#" class="btn btn-outline-accent btn-accent-arrow">
										Daha Fazla Oku<i class="icon icon-ns-arrow-right"></i>
									</a>
								</div>
							</div><!--banner-content-->
							<img src="~/booksaw-1.0.0/images/main-banner1.jpg" alt="afiş" class="banner-image">
						</div><!--slider-item-->
						<!-- Slider Öğesi 2 -->
						<div class="slider-item">
							<div class="banner-content">
								<h2 class="banner-title">Yapay Zeka ile Proje Geliştirme</h2>
								<p>
									Python ve TensorFlow kullanarak yapay zeka projeleri geliştirin.
									Makine öğrenimi algoritmalarını gerçek dünya problemlerine uygulayın.
								</p>
								<div class="btn-wrap">
									<a href="#" class="btn btn-outline-accent btn-accent-arrow">
										Daha Fazla Oku<i class="icon icon-ns-arrow-right"></i>
									</a>
								</div>
							</div><!--banner-content-->
							<img src="~/booksaw-1.0.0/images/main-banner2.jpg" alt="afiş" class="banner-image">
						</div><!--slider-item-->
					</div><!--main-slider-->
					<!-- Sonraki Slider Butonu -->
					<button class="next slick-arrow">
						<i class="icon icon-arrow-right"></i>
					</button>

				</div>
			</div>
		</div>
	</section>


