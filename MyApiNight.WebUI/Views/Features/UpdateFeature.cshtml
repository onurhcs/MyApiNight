@model MyApiNight.WebUI.Dtos.Features.UpdateFeatureDto

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kategori Güncelle</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Sayfa Arkaplanı */
        body {
            background: linear-gradient(to right, #4e54c8, #8f94fb);
            min-height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        /* Form Konteyneri */
        .category-form-container {
            max-width: 500px;
            margin: 50px auto;
        }

        .card {
            border: none;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .card-header {
            background: #6c5ce7;
            color: #fff;
            text-align: center;
            font-size: 1.5rem;
            font-weight: bold;
            padding: 15px;
        }

        /* Form Alanları */
        .form-label {
            font-weight: 500;
        }

        .form-control {
            border-radius: 5px;
        }

            .form-control:focus {
                border-color: #6c5ce7;
                box-shadow: 0 0 5px rgba(108, 92, 231, 0.5);
            }

        /* Buton Tasarımı */
        .btn-submit {
            background: #00b894;
            border: none;
            padding: 10px;
            font-size: 1rem;
            font-weight: bold;
        }

            .btn-submit:hover {
                background: #019874;
            }

        /* Footer Link */
        .form-footer {
            text-align: center;
            margin-top: 15px;
        }

            .form-footer a {
                text-decoration: none;
                color: #6c5ce7;
                font-weight: bold;
            }

                .form-footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <div class="container category-form-container">
        <div class="card">
            <div class="card-header">
                🛠️ Kategori Güncelle
            </div>
            <div class="card-body">
                <form method="post">
                    <!-- Gizli Alan: CategoryId -->
                    <input type="hidden" asp-for="FeatureId" />

                    <!-- Kategori Adı Alanı -->
                    <div class="mb-4">
                        <label asp-for="Name" class="form-label">Kategori Adı</label>
                        <input asp-for="Name" class="form-control" id="Name" type="text" placeholder="Kategori adını giriniz" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <!-- Güncelle Butonu -->
                    <button type="submit" class="btn btn-submit w-100">✅ Kategoriyi Güncelle</button>
                </form>
            </div>

            <!-- Sayfaya Dönüş Linki -->
            <div class="form-footer">
                <a href="/Categories/Index">← Kategori Listesine Dön</a>
            </div>
        </div>
    </div>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
